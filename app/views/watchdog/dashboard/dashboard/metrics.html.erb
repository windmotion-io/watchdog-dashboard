    <style>
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 32px;
        }
        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1.5rem;
        }
        .title {
            font-size: 1.875rem;
            color: rgb(74, 222, 128);
        }
        .version {
            font-size: 0.875rem;
            color: rgb(156, 163, 175);
            margin-left: 0.5rem;
        }
        .last-scan {
            background-color: rgba(31, 41, 55, 0.7);
            padding: 0.25rem 0.75rem;
            border-radius: 0.375rem;
            border-left: 2px solid rgb(239, 68, 68);
            font-size: 0.75rem;
        }
        .last-scan-time {
            color: rgb(250, 204, 21);
        }
        .summary-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 1.5rem;
            margin-bottom: 2rem;
        }
        .summary-card {
            background-color: rgba(31, 41, 55, 0.8);
            padding: 1rem;
            border-radius: 0.5rem;
            border: 1px solid rgb(55, 65, 81);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            transition: border-color 0.3s;
            text-align: center;
        }
        .summary-card:hover {
            border-color: rgb(239, 68, 68);
        }
        .summary-card h3 {
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
            color: rgb(248, 113, 113);
        }
        .summary-card .value {
            font-size: 2.25rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }
        .summary-card .trend {
            font-size: 0.875rem;
            color: rgb(156, 163, 175);
        }
        .content-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
            margin-bottom: 2rem;
        }
        .section {
            background-color: rgba(31, 41, 55, 0.8);
            padding: 1rem;
            border-radius: 0.5rem;
            border: 1px solid rgb(55, 65, 81);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }
        .section h3 {
            font-size: 1.25rem;
            margin-bottom: 1rem;
            color: rgb(250, 204, 21);
            text-align: center;
        }
        .section ul {
            list-style-type: none;
            padding: 0;
        }
        .section ul li {
            border-bottom: 1px solid rgb(55, 65, 81);
            padding: 0.5rem 0;
        }
        .section ul li:last-child {
            border-bottom: none;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 0.875rem;
        }
        table thead tr {
            border-bottom: 1px solid rgb(55, 65, 81);
            color: rgb(156, 163, 175);
        }
        table tbody tr {
            border-bottom: 1px solid rgb(55, 65, 81);
            transition: background-color 0.2s;
        }
        table tbody tr:hover {
            background-color: rgba(127, 29, 29, 0.2);
        }
        table th, table td {
            border: 1px solid rgb(55, 65, 81);
            padding: 0.5rem 1rem;
            text-align: left;
        }
        .footer {
            margin-top: 2rem;
            font-size: 0.75rem;
            color: rgb(107, 114, 128);
            text-align: center;
        }
        .footer a {
            color: rgb(96, 165, 250);
            text-decoration: none;
            transition: color 0.2s;
        }
        .footer a:hover {
            color: rgb(248, 113, 113);
        }
        .warning {
            text-align: center;
            color: #e74c3c;
            margin: 30px 0;
            font-size: 1.25rem;
        }
        .percentile-list li {
            display: flex;
            justify-content: space-between;
            padding: 0.25rem 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div>
                <span class="title">üîç Rspec Watchdog Dashboard</span>
                <span class="version">v<%= RspecWatchdog::VERSION %>-alpha</span>
            </div>
            <div class="last-scan">
                Last scan: <span class="last-scan-time"><%= Time.current.strftime('%Y-%m-%d %H:%M:%S UTC') %></span>
            </div>
        </div>

        <div class="summary-grid">
            <div class="summary-card">
                <h3>üìä Total Tests</h3>
                <div class="value"><%= @total_tests %></div>
                <div class="trend">All Tests</div>
            </div>
            <div class="summary-card">
                <h3>‚úÖ Passed Tests</h3>
                <div class="value"><%= @passed_percentage %>%</div>
                <div class="trend">Passing Rate</div>
            </div>
            <div class="summary-card">
                <h3>üïí Avg Execution</h3>
                <div class="value"><%= sprintf('%.4f', @average_time) %>s</div>
                <div class="trend">Test Duration</div>
            </div>
            <div class="summary-card">
                <h3>‚ùå Failed Tests</h3>
                <div class="value"><%= @failed_percentage %>%</div>
                <div class="trend">Failure Rate</div>
            </div>
        </div>

        <% if @failed_tests.any? %>
            <div class="warning">‚ùå Failed Tests Detected ‚ùå</div>
        <% end %>

        <div class="content-grid">
            <div class="section">
                <h3>‚ö° Fastest vs üê¢ Slowest Test</h3>
                <ul>
                    <li>
                        <strong>Fastest Test:</strong>
                        <%= @fastest_test.description %>
                        (Time: <%= sprintf('%.4f', @fastest_test.run_time) %> s)
                    </li>
                    <li>
                        <strong>Slowest Test:</strong>
                        <%= @slowest_test.description %>
                        (Time: <%= sprintf('%.4f', @slowest_test.run_time) %> s)
                    </li>
                </ul>
            </div>
            <div class="section">
                <h3>üìä Time Distribution</h3>
                <ul>
                    <% @time_distribution_analysis.each do |category, count| %>
                        <li><%= category %>: <%= count %> tests</li>
                    <% end %>
                </ul>
            </div>
        </div>

        <div class="content-grid">
            <div class="section percentile-list">
                <h3>üìà Execution Time Percentiles</h3>
                <ul>
                    <% @percentiles.each do |percentile| %>
                        <li>
                            <span><%= percentile[:percentile] %>% Percentile</span>
                            <span><%= sprintf('%.4f', percentile[:run_time]) %> s</span>
                        </li>
                    <% end %>
                </ul>
            </div>
            <div class="section">
                <h3>‚ùå Failed Tests Details</h3>
                <ul>
                    <% @failed_tests.each do |test| %>
                        <li>
                            <%= test.description %>
                            (File: <%= test.file_path %>,
                            Location: <%= test.location %>)
                        </li>
                    <% end %>
                </ul>
            </div>
        </div>

        <div class="section">
            <h3>üìä Detailed Test Metrics</h3>
            <table>
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>File</th>
                        <th>Location</th>
                        <th>Execution Time (s)</th>
                    </tr>
                </thead>
                <tbody>
                    <% @metrics.each do |metric| %>
                        <tr>
                            <td><%= metric.description %></td>
                            <td><%= metric.file_path %></td>
                            <td><%= metric.location %></td>
                            <td><%= sprintf('%.4f', metric.run_time) %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>

        <div class="footer">
            <p>Dashboard <span class="version">v<%= RspecWatchdog::VERSION %>-alpha</span> | Data refreshed every 6 hours |
                <a href="#">Configure alerts</a> |
                <a href="#">Export data</a>
            </p>
        </div>
    </div>
